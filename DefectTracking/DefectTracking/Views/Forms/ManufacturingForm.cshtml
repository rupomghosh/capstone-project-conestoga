@using DefectTracking.Models
@model ManufacturingDefectsViewModel
@{
    ViewBag.Title = "Manufacturing Defects Form";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/site1.css" asp-append-version="true" />
<link rel="stylesheet" href="~/DefectTracking.styles.css" asp-append-version="true" />
<h1 class="mt-3 text-white text-center">Manufacturing Defects Form</h1>

<form method="post" asp-controller="Forms" asp-action="ManufacturingForm"> 
    <div style="display:flex; flex-direction: column; justify-content: center; align-items: center">
    <div class="col-sm-2 text-white"><label><h2>Serial Number</h2></label></div>
    <div class="col-sm-4">
        <input type="number" asp-for="serialNumber"/>
        </div>
        <div class="text-center">
            <span asp-validation-for="serialNumber"
              class="text-danger"></span>
        </div>
    </div>
    <h2 class="mt-3 text-white text-center marginTop" >Unit Type</h2>
    <div style="display:flex; flex-direction: row; justify-content: center; align-items: center">
        <div class="col-sm-2 text-white labelfont"><label>Pro II</label></div>
        <input type="radio" name="UnitType" value="Pro II" asp-for="unitType" checked="checked"/>
    </div>
    <div style="display:flex; flex-direction: row; justify-content: center; align-items: center">
        <div class="col-sm-2 text-white labelfont"><label>Classic II</label></div>
        <input type="radio" name="UnitType" value="Classic II" asp-for="unitType" />
    </div>
    <div style="display:flex; flex-direction: row; justify-content: center; align-items: center">
        <div class="col-sm-2 text-white labelfont"><label>Micro</label></div>
        <input type="radio" name="UnitType" value="Micro" asp-for="unitType" />
    </div>
    <h2 class="mt-3 text-white text-center">Defect Type</h2>
    <div style="display:flex; flex-direction: row; justify-content: center; align-items: center">
        <div class="col-sm-2 text-white labelfont"><label>Display</label></div>
        <input type="checkbox" asp-for="display" />
        <div class="row text-center">
            <span asp-validation-for="display"
                class="text-danger"></span>
        </div>
    </div>
    <div style="display:flex; flex-direction: row; justify-content: center; align-items: center">
        <div class="col-sm-2 text-white labelfont"><label>Calibration/Missing Calibration</label></div>
        <input type="checkbox" asp-for="calibrationMissingCalibration" />
        <div class="text-center">
            <span asp-validation-for="calibrationMissingCalibration"
                  class="text-danger"></span>
        </div>
    </div>
    <div style="display:flex; flex-direction: row; justify-content: center; align-items: center" >
        <div class="col-sm-2 text-white labelfont"><label>Mechanical Assembly Error</label></div>
        <input type="checkbox" asp-for="mechanicalAssemblyError" />
        <div class="text-center">
            <span asp-validation-for="mechanicalAssemblyError"
                  class="text-danger"></span>
        </div>
    </div>
    <div style="display:flex; flex-direction: row; justify-content: center; align-items: center">
        <div class="col-sm-2 text-white labelfont"><label>Dead or Dying Batteries</label></div>
        <input type="checkbox" asp-for="deadorDyingBatteries" />
        <div class="text-center">
            <span asp-validation-for="deadorDyingBatteries"
                  class="text-danger"></span>
        </div>
    </div>
    <div style="display:flex; flex-direction: row; justify-content: center; align-items: center">
        <div class="col-sm-2 text-white labelfont"><label>PCB Board Defect</label></div>
        <input type="checkbox" asp-for="pCBBoardDefect" />
        <div class="text-center">
            <span asp-validation-for="pCBBoardDefect"
                  class="text-danger"></span>
        </div>
    </div>
    <div style="display:flex; flex-direction: row; justify-content: center; align-items: center">
        <div class="col-sm-2 text-white labelfont"><label>Speaker Quiet</label></div>
        <input type="checkbox" asp-for="speakerQuiet" />
        <div class="text-center">
            <span asp-validation-for="speakerQuiet"
                  class="text-danger"></span>
        </div>
    </div>
    <div style="display:flex; flex-direction: row; justify-content: center; align-items: center">
        <div class="col-sm-2 text-white labelfont"><label>No Sound</label></div>
        <input type="checkbox" asp-for="noSound" />
        <div class="text-center">
            <span asp-validation-for="noSound"
                  class="text-danger"></span>
        </div>
    </div>
    <div style="display:flex; flex-direction: row; justify-content: center; align-items: center">
        <div class="col-sm-2 text-white labelfont"><label>Switch Not Working</label></div>
        <input type="checkbox" asp-for="switchNotWorking" />
        <div class="text-center">
            <span asp-validation-for="switchNotWorking"
                  class="text-danger"></span>
        </div>
    </div>
    <div style="display:flex; flex-direction: row; justify-content: center; align-items: center">
        <div class="col-sm-2 text-white labelfont"><label>Button Not Working</label></div>
        <input type="checkbox" asp-for="buttonNotWorking" />
        <div class="text-center">
            <span asp-validation-for="buttonNotWorking"
                  class="text-danger"></span>
        </div>
    </div>
    <div style="display:flex; flex-direction: row; justify-content: center; align-items: center">
        <div class="col-sm-2 text-white labelfont"><label>Enclosure Defect</label></div>
        <input type="checkbox" asp-for="enclosureDefect" />
        <div class="text-center">
            <span asp-validation-for="enclosureDefect"
                  class="text-danger"></span>
        </div>
    </div>
    <div style="display:flex; flex-direction: row; justify-content: center; align-items: center">
        <div class="col-sm-2 text-white labelfont"><label>Other...</label></div>
        <input type="checkbox" asp-for="other" />
        <div class="text-center">
            <span asp-validation-for="other"
                  class="text-danger"></span>
        </div>
    </div>
    <div style="display:flex; flex-direction: column; justify-content: center; align-items: center">
        <label class="mt-3 text-white text-center labelfont" >Other Defect Problem Decsription</label>
        <input type="text" asp-for="otherDesc" />
        <div class="text-center">
            <span asp-validation-for="otherDesc"
                  class="text-danger"></span>
        </div>
    </div>
    <div style="display:flex; flex-direction: column; justify-content: center; align-items: center">
        <label class="mt-3 text-white text-center labelfont">Description of Problem</label>
        <input type="text" asp-for="problemDesc" />
        <div class="text-center">
            <span asp-validation-for="problemDesc"
                  class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="center">
        
        <button type="submit" class="btn btn-primary justify-content-right">
            Save
        </button>
        <a class="btn btn-primary justify-content-center" asp-area="" asp-controller="Forms" asp-action="ManufacturingForm">
            Cancel
        </a>
        <a class="btn btn-primary justify-content-left" asp-area="" asp-controller="Home" asp-action="Index">
            Back
        </a>
    </div>

</form>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@ViewBag.Exception
